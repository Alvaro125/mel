<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,  shrink-to-fit=no">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/basic.css">
    <title>Editar</title>
</head>

<body>
    <%- include ('../../partials/_navbar') -%>
    <%- include ('../../partials/_error') -%>
    <%- include ('../../partials/_msg') -%>
    <div class="container mt-4">
        <% if (usuarios.length>0) { %>
            <table class="table table-dark table-striped">
        
                <tbody>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Nome</th>
                <th scope="col">Tipo</th>
                <th scope="col">eAdmin</th>
                <th scope="col">Deletar</th>
                <th scope="col">Admin</th>
                <th scope="col">Client</th>
                <th scope="col">Jornalista</th>
            </tr>
        </thead>
        <% usuarios.forEach(usuario => { %>
        <tr>
            <th scope="row"><%= usuario._id %></th>
            <% if (usuario.Isgoogle) { %>
                <td><%= usuario.google.email %></td>
                <td><%= usuario.google.nome %></td>
                <td>usuario Google</td>
            <% } %>
            <% if (usuario.Islocal) { %>
                <td><%= usuario.local.email %></td>
                <td><%= usuario.local.nome %></td>
                <td><%= usuario.local.tipo %></td>
            <% } %>
            <td><%= usuario.eAdmin %></td>
            <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalLong">
                    &times;
                </button>
        
                <!-- Modal -->
                <div class="modal fade text-dark" id="exampleModalLong" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Deletar usuario </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Você tem CERTEZA de que quer deletar usuario?
                            </div>
                            <div class="modal-footer">
                                <form action="/admin/contas/deletar" method="POST">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                    <input type="hidden" name="id" value="<%= usuario._id %>">
                                    <button type="submit" class="btn btn-primary">Sim, deletar!</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <form action="/admin/contas/admin" method="post">
                    <input type="hidden" name="ida" value="<%= usuario._id %>">
                    <button type="submit" class="btn btn-primary">Admin</button>
                </form>
            </td>
            <td>
                <form action="/admin/contas/client" method="post">
                    <input type="hidden" name="idc" value="<%= usuario._id %>">
                    <button type="submit" class="btn btn-primary">Client</button>
                </form>
            </td>
            <td>
                <form action="/admin/contas/news" method="post">
                    <input type="hidden" name="idn" value="<%= usuario._id %>">
                    <button type="submit" class="btn btn-primary">News</button>
                </form>
            </td>
        </tr>
        <% }) %>
            </tbody>
        </table>
        <% }else{ %>
        <p class="text-white">nenhuma conta registrada</p>
        <% } %>
    </div>



</body>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
<script src="/js/bootstrap.js"></script>

</html>