<!DOCTYPE html>
<html lang="pt-br" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Chat brabo</title>
    <!--Boostrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <!--FontAwesome-->
    <script src="https://kit.fontawesome.com/4c433c4759.js" crossorigin="anonymous"></script>
    <!--Meu Css-->
    <link rel="stylesheet" type="text/css" href="/css/chat.css">
  </head>
  <body>
    <%- include ('../partials/_navbar') -%>
    <%- include ('../partials/_error') -%>
    <%- include ('../partials/_msg') -%>

    <div class="join-container">
			<header class="join-header">
				<h1><i class="fas fa-smile"></i> MELChat</h1>
			</header>
			<main class="join-main">
				<form action="/sala">
					<div>
						<label for="username">Nome de Usuario</label>
						<input
							type="text"
							name="username"
							id="username"
							placeholder="Enter username..."
							required
						/>
					</div>
					<div>
						<label for="room">Sala</label>
						<select name="room" id="room">
              <% if (eventos) { %>
               <% eventos.forEach(evt => { %>
                <option value="<%= evt._id %>"><%= evt.titulo %></option>
               <% }) %>
              <% } %>
						</select>
					</div>
					<button type="submit" class="btn">Entra no Chat</button>
				</form>
			</main>
		</div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
  integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
  integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
  integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="/js/bootstrap.js"></script>
  </body>
</html>
